{
    "coc.preferences.hoverTarget": "float",
    "diagnostic.displayByAle": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "rust",
        "golang",
        "json"
    ],
    "codeLens.enable": true,
    "languageserver": {
        "go": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "trace.server": "verbose",
            "disableWorkspaceFolders": true,
            "filetypes": [
                "go"
            ]
        },
       "metals": {
            "command": "metals-vim",
            "trace.server": "verbose",
            "rootPatterns": [
                "build.sbt"
            ],
            "filetypes": [
                "scala",
                "sbt"
            ]
        }
    },
    "rust-analyzer.diagnostics.enableExperimental": false,
    "rust-analyzer.inlayHints.enable": true,
    "rust-analyzer.inlayHints.refreshOnInsertMode": false,
    "rust-analyzer.inlayHints.typeHints": true,
    "rust-analyzer.inlayHints.chainingHints": false,
    "rust-analyzer.assist.importMergeBehaviour": "full",
    "rust-analyzer.completion.postfix.enable": true,
    "rust-analyzer.completion.autoimport.enable": true,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.procMacro.enable": true,
    "go.goplsOptions": {
        "completeUnimported": true
    },
    "metals.showInferredType": true,
    "metals.showImplicitArguments": true,
    "metals.showImplicitConversionsAndClasses": true,
    "Lua.workspace.library": {
        "/usr/share/nvim/runtime/lua": true,
        "/usr/share/nvim/runtime/lua/vim": true,
        "/usr/share/nvim/runtime/lua/vim/lsp": true
    },
    "Lua.diagnostics.globals": [
        "vim"
    ],
    "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
    "clangd.path": "/opt/homebrew/opt/llvm/bin/clangd",
    "clangd.disableDiagnostics": true
}
